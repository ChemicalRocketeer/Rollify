<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calcExpressionEdit"
            android:layout_gravity="right"
            android:layout_alignParentEnd="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backspaceButton"
            android:src="@drawable/ic_backspace_white_24dp"
            android:layout_alignParentEnd="true"
            android:background="#00000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/calcExpressionDisplay"
        android:layout_gravity="right"
        android:paddingBottom="@dimen/calcExpressionDisplayPadding"
        android:paddingTop="@dimen/calcExpressionDisplayPadding" />

</LinearLayout>