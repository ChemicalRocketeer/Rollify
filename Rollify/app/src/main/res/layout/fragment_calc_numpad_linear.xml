<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/calcNumpad7"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/calcNumpad8"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/calcNumpad9"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/calcNumpad4"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/calcNumpad5"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/calcNumpad6"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:onClick="onNumpadButtonPressed" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/calcNumpad1"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/calcNumpad2"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="3"
            android:id="@+id/calcNumpad3"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/calcNumpad0"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="("
            android:id="@+id/calcNumpadOpenParen"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text=")"
            android:id="@+id/calcNumpadCloseParen"
            style="@style/CalcNumpadButtonLinear"
            android:layout_weight="1"
            android:onClick="onNumpadButtonPressed" />
    </LinearLayout>
</LinearLayout>